<div class="thought-form-container">
    <a href="/thought/dashboard">Voltar</a>
    <h1>Criando um pensamento</h1>

    <form action="/thought/add" method="post">
        <div class="form-control">
            <label for="title">Pensamento:</label>
            <input type="hidden" name="UserId" value="{{session.userId}}">
            <input type="text" name="title" id="title" placeholder="Digite o seu pensamento">
            <button class="">Criar</button>
        </div>
    </form>
</div>